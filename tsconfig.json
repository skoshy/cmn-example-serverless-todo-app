{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "types": ["node", "jest"],
    "typeRoots": ["./src/types", "./next-env.d.ts"]
  },
  "include": ["./next-env.d.ts", "./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "src/**/tests/*.ts",
    "src/**/tests/*.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
